{
  "extends": [
    "stylelint-config-strict-scss"
  ],
  "class-name-format": [
    1,
    {
      "convention": "strictbem"
    }
  ],
  "rules": {
    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": [
          "amp-img"
        ]
      }
    ],
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true,
    "scss/at-mixin-named-arguments": [
      "always",
      {
        "ignore": [
          "single-argument"
        ]
      }
    ]
  }
}